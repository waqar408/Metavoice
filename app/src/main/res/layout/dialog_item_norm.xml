<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkBlue"
    android:padding="15dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/darkBlue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_desc_norm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_back"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:hint="Beschreibung eingeben"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/et_word_norm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_back"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:hint="
Geben Sie die Anzahl der WÃ¶rter ein"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/et_price_norm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_back"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:hint="Preis eingeben"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/et_advance_payments_norm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_back"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:hint="Advance Payments"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:visibility="gone"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_update_item_norm"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/btn_back"
                android:text="Element aktualisieren"
                android:textSize="15sp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:padding="8dp"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn_cancel_norm"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/btn_back"
                android:text="Stornieren"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/btn_update_item_norm"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:padding="8dp"
                android:layout_marginVertical="10dp"/>
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>